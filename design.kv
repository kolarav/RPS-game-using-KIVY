#:kivy 2.0

ManageScreen:
    StartWindow:
    PlayingWindow:



<StartWindow>:
    name: "start"
    GridLayout:
        cols:1
        size: root.width,root.height
        Image:
            source:'images/rps.png'
            allow_stretch: False
            keep_ratio: False
            
        Label:
            text: "Let's Rock Paper Scissor"
            font_size:30
        FloatLayout:
            Button:
                text:"Play"
                size_hint_x:0.2
                size_hint_y: 0.3
                pos_hint:{'x':0.40,'y':0.9}
                background_color: 0.7,1,0,1
                on_release:
                    app.root.current="playing"
                    root.manager.transition.direction="left"

            Button:
                text:"Exit"
                size_hint_x:0.2
                size_hint_y: 0.3
                pos_hint:{'x':0.40,'y':0.55}
                on_press:
                    app.stop()

<PlayingWindow>:
    name: "playing"
    FloatLayout:
        size: root.width,root.height
        Button:
            id: com_choose
            background_normal:'images/rps.png'
            size_hint_x:.2
            size_hint_y:0.20
            pos_hint:{'x':0.4,'y':0.7}    

        Button:
            id:rock
            background_normal:'images/rock.png'
            size_hint_x:0.08
            size_hint_y:0.12
            pos_hint:{'x':0.31,'y':0.35}
            on_press:
                app.show_pop('rock')
                
        Button:
            id: paper
            background_normal:'images/paper.png'
            size_hint_x:0.08
            size_hint_y:0.12
            pos_hint:{'x':0.46,'y':0.35}
            on_press:
                app.show_pop('paper')
                
                

                
        Button:
            id: scissor
            background_normal:'images/scissor.png'
            size_hint_x:0.08
            size_hint_y:0.12
            pos_hint:{'x':0.61,'y':0.35}
            on_press:
                app.show_pop('scissor')
                
        Label:
            text:"Choose Yours!"
            font_size: 30
            pos_hint:{'y':0.03}
        
        Button:
            id:back
            text:"Back"
            size_hint_x:0.1
            size_hint_y:0.1
            pos_hint:{'x':0.45,'y':0.1}
            background_color: 0.84,0.87,0.1,1
            on_press:
                paper.disabled=False
                rock.disabled=False
                scissor.disabled=False
                app.root.current="start"
                root.manager.transition.direction="right"



